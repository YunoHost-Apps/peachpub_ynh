{
    "name": "PeachPub",
    "id": "peachpub",
    "packaging_format": 1,
    "description": {
        "en": "Secure Scuttlebutt pub with a web interface for pub management."
    },
    "version": "0.6.19~ynh4",
    "url": "https://docs.peachcloud.org",
    "upstream": {
        "license": "AGPL-3.0",
        "website": "https://docs.peachcloud.org",
        "demo": "https://demo.peachcloud.org",
        "admindoc": "https://docs.peachcloud.org",
        "userdoc": "https://docs.peachcloud.org",
        "code": "https://git.coopcloud.tech/PeachCloud"
    },
    "license": "AGPL-3.0",
    "maintainer": {
        "name": "Max Fowler",
        "email": "max@mfowler.info"
    },
    "requirements": {
        "yunohost": ">= 4.1.7"
    },
    "multi_instance": true,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain"
            },
            {
                "name": "path",
                "type": "path",
                "example": "/example",
                "default": "/"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": true,
                "help": {
                    "en": "If private, only yunohost users can use this app."
                }
            },
            {
                "name": "password",
                "type": "password",
                "help": {
                    "en": "Use this password to log into the admin interface for the ssb pub."
                }
            }
        ]
    }
}
